<div class="page-header">
  <h3>Cookbook Meal #<%= @cookbook_meal.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cookbook</dt>
      <dd>
        <% if @cookbook_meal.cookbook.present? %>
          <a href="/cookbooks/<%= @cookbook_meal.cookbook_id %>">
            <%= @cookbook_meal.cookbook.name %>
          </a>
        <% end %>
      </dd>

      <dt>Meal</dt>
      <dd>
        <% if @cookbook_meal.meal.present? %>
          <a href="/meals/<%= @cookbook_meal.meal_id %>">
            <%= @cookbook_meal.meal.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cookbook_meals" class="btn btn-primary">
        Back
      </a>
      <a href="/cookbook_meals/<%= @cookbook_meal.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cookbook_meal/<%= @cookbook_meal.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
