<div class="page-header">
  <h1>
    Cookbook meals
    <a href="/cookbook_meals/new" class="btn btn-lg btn-success">New Cookbook meal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cookbook</th>
        <th>Meal</th>
        <th>Actions</th>
      </tr>

      <% @cookbook_meals.each do |cookbook_meal| %>
      <tr>
        <td><%= cookbook_meal.cookbook_id %></td>
        <td><%= cookbook_meal.meal_id %></td>
        <td>
          <a href="/cookbook_meals/<%= cookbook_meal.id %>" class="btn btn-primary">Show</a>
          <a href="/cookbook_meals/<%= cookbook_meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cookbook_meal/<%= cookbook_meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
