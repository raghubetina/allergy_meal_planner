<div class="page-header">
  <h1>
    Meal recipes
    <a href="/meal_recipes/new" class="btn btn-lg btn-success">New Meal recipe</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Meal</th>
        <th>Recipe</th>
        <th>Actions</th>
      </tr>

      <% @meal_recipes.each do |meal_recipe| %>
      <tr>
        <td>
          <% if meal_recipe.meal.present? %>
            <a href="/meals/<%= meal_recipe.meal.id %>">
              <%= meal_recipe.meal.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if meal_recipe.recipe.present? %>
            <a href="/recipes/<%= meal_recipe.recipe.id %>">
              <%= meal_recipe.recipe.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/meal_recipes/<%= meal_recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/meal_recipes/<%= meal_recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal_recipe/<%= meal_recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @meal_recipes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
