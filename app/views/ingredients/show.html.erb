<div class="page-header">
  <h3>Ingredient #<%= @ingredient.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @ingredient.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ingredients" class="btn btn-primary">
        Back
      </a>
      <a href="/ingredients/<%= @ingredient.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_ingredient/<%= @ingredient.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Ingredient has many recipe_ingredients -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Recipe Ingredients
      </li>

      <% @ingredient.recipe_ingredients.each do |recipe_ingredient| %>
        <li class="list-group-item">
          <a href="/recipe_ingredients/<%= recipe_ingredient.id %>">
            <%= recipe_ingredient.recipe_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/recipe_ingredients/<%= recipe_ingredient.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/recipe_ingredients/<%= recipe_ingredient.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_recipe_ingredient/<%= recipe_ingredient.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Ingredient has many ingredient_sensitivities -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Ingredient Sensitivities
      </li>

      <% @ingredient.ingredient_sensitivities.each do |ingredient_sensitivity| %>
