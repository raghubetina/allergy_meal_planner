<div class="page-header">
  <h1>
    User sensitivies
    <a href="/user_sensitivies/new" class="btn btn-lg btn-success">New User sensitivy</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Sensitivity</th>
        <th>Actions</th>
      </tr>

      <% @user_sensitivies.each do |user_sensitivy| %>
      <tr>
        <td><%= user_sensitivy.user.email %></td>
        <td><%= user_sensitivy.sensitivity.name %></td>
        <td>
          <a href="/user_sensitivies/<%= user_sensitivy.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == user_sensitivy.user %>
            <a href="/user_sensitivies/<%= user_sensitivy.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_user_sensitivy/<%= user_sensitivy.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
