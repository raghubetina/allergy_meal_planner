<div class="page-header">
  <h1>
    Cookbooks
    <a href="/cookbooks/new" class="btn btn-lg btn-success">New Cookbook</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @cookbooks.each do |cookbook| %>
      <tr>
        <td><%= cookbook.user_id %></td>
        <td><%= cookbook.name %></td>
        <td>
          <a href="/cookbooks/<%= cookbook.id %>" class="btn btn-primary">Show</a>
          <a href="/cookbooks/<%= cookbook.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cookbook/<%= cookbook.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
